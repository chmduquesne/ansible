interface {{ radvd.interface }} {
  IgnoreIfMissing on;
  AdvSendAdvert on;
  MaxRtrAdvInterval 300;
  AdvLinkMTU 1423;
  prefix {{ radvd.inet6_prefix }}::/{{ radvd.inet6_mask}} {
    AdvOnLink on;
    AdvAutonomous on;
    AdvValidLifetime 3600;
    AdvPreferredLifetime 1800;
  };
  RDNSS {{ radvd.inet6_prefix }}::1 {
    AdvRDNSSLifetime 1800;
  };
};
